<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fetch.ui.FetchWaitActivity">

    <Button
        android:id="@+id/alternative_flow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to alternative Flow fetch"
        app:layout_constraintBottom_toTopOf="@+id/job_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow_button" />

    <Button
        android:id="@+id/flow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Flow fetch"
        app:layout_constraintBottom_toTopOf="@+id/alternative_flow_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/job_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to job fetch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alternative_flow_button" />

</androidx.constraintlayout.widget.ConstraintLayout>